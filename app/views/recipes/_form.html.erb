<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>
  <ul>
    Ingredients: <%= f.fields_for :ingredients do |ingredient|  %>
      <li><%= ingredient.label :name %>
        <%= ingredient.text_field :name %></li>
      <li><%= ingredient.label :quantity %>
        <%= ingredient.text_field :quantity %></li>
    <% end %>
  </ul>
  <%= f.submit %>
<% end %>
